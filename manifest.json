{
    "manifest_version": 3,
    "name": "ProgressTimeBar",
    "version": "1.0",
    "description": "Affiche une barre de progression en bas de chaque page web.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script/inject_html.js", "script/script.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["index.html", "styles.css"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "Options ProgressTimeBar"
    }
  }
  